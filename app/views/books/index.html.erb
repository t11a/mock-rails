<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>
<%= image_tag "books.jpg" %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Jenre</th>
      <th>Description</th>
      <th>Publisher</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.jenre %></td>
        <td><%= book.description %></td>
        <td><%= book.publisher %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
